<div class="navbar navbar-expand-sm sticky-top navbar-light navbar-baby">
  <div class="container-fluid container">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "baby-logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
      <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link tab-text" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", about_path, class: "nav-link tab-text" %>
          </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Shortlist", shortlist_path, class: "nav-link tab-text" %>
          </li>
          <%= link_to "My Panel", user_path(current_user), class: "button-outline" %>
        <% else %>
          <li class="nav-item" style="padding-top: 10px">
            <%= link_to "Login", new_user_session_path, class: "main-button" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
