        <%= link_to "Edit", edit_child_path(child) %>
        <%= link_to "Delete",
            child_path(child),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        <% end %>
        </div>
      </div>
    </div>
  </div>

