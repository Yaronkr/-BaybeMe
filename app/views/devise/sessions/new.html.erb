
<div class="container mx-auto my-3" style="margin:60px; padding:30px; width:600px; border: 1px solid #000000; background-color: white; border-radius: 10px; box-shadow: 0px 10px 20px rgba(0, 0, 0, .2);">
  <h2 style="text-align:center; font-size: 40px;">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>
<%= render "devise/shared/links" %>
</div>
