<h1>Children</h1>

    <div>
      <% @children.each do |child| %>
        <p><%= child.first_name %> <%= child.last_name %></p>
        <%= link_to "view profile", child_path(child)%>
        <%= link_to "Edit", edit_child_path(child) %>
        <%= link_to "Delete",
            child_path(child),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        <hr>
      <% end %>
    </div>

<%= link_to "add a child", new_child_path %>
